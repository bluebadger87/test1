@model IEnumerable<ShopProject.Models.Product>
@{
   ViewData["Title"] = "Index";
}

<!-- Body Right (A) -->
<div class="col-lg-10 col-md-10 col-sm-10">
   <!-- myCarousel A -->
   <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12">
         <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="5000" style="height:550px; width:1400px;margin:80px auto">
            <ol class="carousel-indicators">
               <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
               <li data-target="#myCarousel" data-slide-to="1"></li>
               <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" role="listbox" style="height:550px; width:1400px;">
               <div class="item active">
                  <img src="~/images/main4.jpg" style="height:550px; width:1400px;" alt="ASP.NET" class="img-responsive" />
                  <div class="carousel-caption" role="option">
                     <p>
                        Learn how to build ASP.NET apps that can run anywhere.
                        <a class="btn btn-default" href="https://www.google.co.jp/search?newwindow=1&tbm=isch&q=vacation" target="_blank">
                           Learn More
                        </a>
                     </p>
                  </div>
               </div>
               <div class="item">
                  <img src="~/images/main5.jpg" style="height:550px; width:1400px;" alt="Visual Studio" class="img-responsive" />
                  <div class="carousel-caption" role="option">
                     <p>
                        There are powerful new features in Visual Studio for building modern web apps.
                        <a class="btn btn-default" href="https://www.google.co.jp/search?newwindow=1&tbm=isch&q=supercar" target="_blank">
                           Learn More
                        </a>
                     </p>
                  </div>
               </div>
               <div class="item">
                  <img src="~/images/main6.jpg" style="height:550px; width:1400px;" alt="Package Management" class="img-responsive" />
                  <div class="carousel-caption" role="option">
                     <p>
                        Bring in libraries from NuGet and npm, and automate tasks using Grunt or Gulp.
                        <a class="btn btn-default" href="https://www.google.co.jp/search?newwindow=1&tbm=isch&q=flower" target="_blank">
                           Learn More
                        </a>
                     </p>
                  </div>
               </div>
            </div>
            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
               <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
               <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
               <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
               <span class="sr-only">Next</span>
            </a>
         </div>
      </div>
   </div>
   <!-- myCarousel Z -->
   <!-- card(6) A -->
   <div class="row" style="margin:30px 100px">
      @foreach (var item in Model)
      {
         <div class="col-lg-4 col-md-4 col-sm-4 card" style="margin:0 auto">
            <div class="text-center" style="margin:0px 50px ">
               <a asp-controller="Home" asp-action="ProductDetail" asp-route-Id="@item.ProductNo">
                  <img class="card-img-top" src="~/images/@item.ProductMainImage" style="height:200px; width:300px">
               </a>
               <div class="card-body" style="overflow:hidden;height:300px">
                  <h2 class="card-title">@item.ProductName</h2>
                  <h4>@item.ProductPrice 円</h4>
                  <p class="card-text text-center">Lorem ipsum dolor sit amet,</p>
                  <a asp-controller="Home" asp-action="ProductDetail" asp-route-Id="@item.ProductNo" class="btn btn-primary btn-block">Detail</a>
               </div>
            </div>
         </div>
      }
   </div>
   <!-- card(6) Z -->
</div>
<!-- Body Right (Z) -->